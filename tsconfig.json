{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "skipLibCheck": true,
        "types": ["vitest"],  
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true 
    },
    "include": ["src", "__test__"],
    "exclude": [
        "./node_modules"
    ],
    "name": "test-project"
}